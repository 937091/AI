print("Hello ! i am  a chatbot")
print("you can say:hii,menu,order,price,thanks,bye")


while True:
    user=input("you:").lower()
    if "hi" in user:
        print("bot:hii! welcome to our shop")
    elif "menu" in user:
        print("bot:we have a pizza burger,coke")
    elif "order" in user:
        print("bot:great ,tell me what you want to order")
    elif "thanks" or "thank you" in user:
        print("bot:welcome")
        break
    else :
         print("bot: sorry!")
